=haml :_link_adder
%div#link_output
	%table.tabular
		%tr
			%th
				Shortened
			%th
				Original URL
			%th
				Most recent use
			%th
				Stats
		-popular_links.each do |link|
			%tr
				%td
					=link.slug
				%td
					=haml :_linkify, locals: { url: link.url }
				%td
					=link.last_used_at
				%td
					%a(href="/app/stats/#{link.slug}")
						view stats
