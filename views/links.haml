%div#new_links
	%form#add-new-link(action="/app/shorten-url" method="POST")
		%input(type="text" placeholder="shorten URL" name="url")
		%button(type="submit") create short URL
%div#link_output
	%table.tabular
		%tr
			%th
				Shortened
			%th
				Original URL
			%th
				Most recent use
			%th
				Stats
		-popular_links.each do |link|
			%tr
				%td
					=link.slug
				%td
					%a{href: link.url}= link.url
				%td
					=link.last_used_at
				%td
					%a(href="/app/stats/#{link.slug}")
						view stats
